{
    "name": "znewman-site",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "Personal website for Zachary Newman built with Eleventy and Tailwind CSS",
    "license": "MIT",
    "author": "Zachary Newman",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "clean": "rm -rf dist",
        "predev": "tailwindcss -c tailwind.config.cjs -i ./src/styles/main.css -o ./src/assets/css/site.css",
        "dev": "concurrently \"npm:watch:eleventy\" \"npm:watch:css\"",
        "watch:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --serve",
        "watch:css": "tailwindcss -c tailwind.config.cjs -i ./src/styles/main.css -o ./src/assets/css/site.css --watch",
        "build:css": "NODE_ENV=production tailwindcss -c tailwind.config.cjs -i ./src/styles/main.css -o ./src/assets/css/site.css --minify",
        "build": "npm run clean && npm run build:css && ELEVENTY_ENV=prod npx @11ty/eleventy"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.0.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.14"
    }
}
